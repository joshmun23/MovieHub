<div class="movie_h3">
  <h3>MovieHub</h3>
</div>

<% if !@movies.empty? %>
  <div class="movies">
    <% @movies.each do | movie | %>
      <div class="panel">
        <span><%= link_to movie.title, movie_path(movie) %></span>
        <%= movie.year %>
        <span><%= link_to "Edit Movie", edit_movie_path(movie) %></span>
      </div>
    <% end %>
  </div>
<% end %>

<ul>
  <% if current_user && current_user.admin? %>
    <h4>You are an Admin: <%= link_to "Got to Admin Functions", users_path %></h4>
  <% end %>
</ul>

<%= paginate @movies %>
