<h3>Add a Movie</h3>

<div class="row-form">
  <%= form_for @movie do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Insert Movie Title" %>
    </p>
    <div id="titles-list-container">
      <ul id="titles-list"></ul>
    </div>
    <p>
      <%= f.submit "Create a New Movie", class: "medium button radius", id: "movie-submit" %>
    </p>
  <% end %>
</div>
